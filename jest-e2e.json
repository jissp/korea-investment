{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "setupFiles": [
        "dotenv/config"
    ],
    "moduleNameMapper": {
        "^@app/(.*)$": "<rootDir>/src/app/$1",
        "^@assets/(.*)$": "<rootDir>/src/assets/$1",
        "^@common/(.*)$": "<rootDir>/src/common/$1",
        "^@modules/(.*)$": "<rootDir>/src/modules/$1"
    }
}
