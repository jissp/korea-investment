    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "setupFiles": [
            "dotenv/config"
        ],
        "moduleNameMapper": {
            "^@app/(.*)$": "<rootDir>/app/$1",
            "^@assets/(.*)$": "<rootDir>/assets/$1",
            "^@common/(.*)$": "<rootDir>/common/$1",
            "^@modules/(.*)$": "<rootDir>/modules/$1"
        }
